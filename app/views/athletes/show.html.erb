
<div class="grid md:grid-cols-4 gap-4" >
  <section class="flex flex-col gap-4 bg-white rounded-md p-5">
    <span class="rounded-full overflow-hidden">
      <%= image_tag 'user-placeholder.jpg' %>
    </span>
    <h1 class="text-xl font-semibold"><%= @athlete.full_name %></h1> 
  </section>

  <section class="flex flex-col gap-4 bg-white rounded-md p-5 md:col-span-3 shadow">
    <h2 class="text-lg font-bold mb-4">This Week's Training Plan</h2>
    
    <div class="flex flex-wrap gap-4">
      
      <% 7.times do |i| %>
        <div class="flex flex-col p-4 rounded-lg bg-gray-100 text-center border border-gray-300 w-52 min-h-40">
          <h3 class="font-medium text-lg mb-2"><%= (@start_date + i).strftime("%A") %></h3>
          <p class="text-sm text-gray-700"><%= (@start_date + i).strftime("%B %-d, %Y") %></p>
          <% @athlete.assigned_sessions.each do |session| %>
            <% if (@start_date + i) == session.date %>
              <p class="mt-2 text-sm bg-blue-100 text-blue-600 p-2 rounded border border-blue-200"><%= session.details %></p>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </section>
</div>
 